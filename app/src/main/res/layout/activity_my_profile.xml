<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_app_bar" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUser"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/hugh" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                style="@style/textTitle"
                android:text="@string/profile.name.title" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile.name.content" />

            <TextView
                style="@style/textTitle"
                android:layout_marginTop="16dp"
                android:text="@string/profile.phone.title" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile.phone.content" />

            <TextView
                style="@style/textTitle"
                android:layout_marginTop="16dp"
                android:text="@string/profile.email.title" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile.email.content" />

            <TextView
                style="@style/textTitle"
                android:layout_marginTop="16dp"
                android:text="@string/profile.password.title" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/create.account.et.password"
                android:inputType="textPassword"
                android:text="@string/profile.password.content" />

            <TextView
                style="@style/textTitle"
                android:layout_marginTop="16dp"
                android:text="@string/profile.address.title" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile.address.content" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
